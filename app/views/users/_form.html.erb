<div class="container">

  <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :firstname %><br>
            <%= f.text_field :firstname, class: 'form-control', :namespace => @user.id %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :lastname %><br>
            <%= f.text_field :lastname, class: 'form-control', :namespace => @user.id %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>

</div>